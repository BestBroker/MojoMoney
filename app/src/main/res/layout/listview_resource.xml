<?xml version="1.0" encoding="utf-8"?>
<android.support.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recycler_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/MenuOptions"
        android:layout_width = "match_parent"
        android:layout_height ="match_parent"
        android:orientation = "vertical"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorBeschde_light2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBeschde" />

</android.support.RelativeLayout>